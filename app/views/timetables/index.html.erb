<p id="notice"><%= notice %></p>

<h1>Listing Timetables</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Slot1</th>
      <th>Slot2</th>
      <th>Slot3</th>
      <th>Slot4</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @timetables.each do |timetable| %>
      <tr>
        <td><%= timetable.date %></td>
        <%= render 'layouts/slot', available: timetable.slot1 %>
        <%= render 'layouts/slot', available: timetable.slot2 %>
        <%= render 'layouts/slot', available: timetable.slot3 %>
        <%= render 'layouts/slot', available: timetable.slot4 %>
        <td><%= timetable.employee.name %></td>
        <td><%= link_to 'Edit', edit_employee_timetable_path(id: timetable.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

